<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content" android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPopMovieImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:src="@drawable/ic_movie_filter_black_150dp"
        android:padding="10dp" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="The Magnificent Seven"
        android:id="@+id/tvTitle"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivPopMovieImage"
        android:layout_toEndOf="@+id/ivPopMovieImage"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@string/abc_font_family_display_2_material" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="A big screen remake of John Sturges' classic western The Magnificent Seven, itself a remake of Akira Kurosawa's Seven Samurai. Seven gun men in the old west gradually come together to help a poor village against savage thieves."
        android:id="@+id/tvOverview"
        android:layout_below="@+id/tvTitle"
        android:layout_toRightOf="@+id/ivPopMovieImage"
        android:layout_toEndOf="@+id/ivPopMovieImage"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:fontFamily="@string/abc_font_family_display_4_material"
        android:maxLines="9"
        android:ellipsize="end" />
</RelativeLayout>